<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home"> <fragment
    android:id="@+id/nav_home"
    android:name="com.example.workio.ui.main.home.HomeFragment"
    android:label="Trang chủ"
    tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_homeFragment_to_shiftFragment"
        app:destination="@id/nav_shift"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
</fragment>

    <fragment
        android:id="@+id/nav_shift"
        android:name="com.example.workio.ui.main.shift.ShiftFragment"
        android:label="Ca làm"
        tools:layout="@layout/fragment_shift" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.example.workio.ui.main.chat.ChatFragment"
        android:label="Trò chuyện"
        tools:layout="@layout/fragment_chat">

        <action
            android:id="@+id/action_chatFragment_to_conversationFragment"
            app:destination="@id/conversationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/nav_more"
        android:name="com.example.workio.ui.main.more.MoreFragment"
        android:label="Thêm"
        tools:layout="@layout/fragment_more" />

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.example.workio.ui.main.chat.MessageAdapter"
        android:label="{groupName}"
        tools:layout="@layout/fragment_conversation">

        <argument
            android:name="groupName"
            app:argType="string"
            android:defaultValue="Nhóm Chat" />
    </fragment>

</navigation>